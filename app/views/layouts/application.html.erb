<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="d-flex navbar navbar-expand-lg navbar-light bg-light">
     <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand m-2" %>
      <div class="d-flex">
        <form class="d-flex form-inline ">
          <input class="form-control m-2 p-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success m-2 p-2" type="submit">Search</button>
        </form>
        <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary m-2 p-2"%>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
