  <div class="container mt-3">
    <div class="row">
      <div class="col-12">
        <h1>All our flats</h1>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>All <%= @flats.length %> flats.</p>
      </div>
    </div>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="flat-card">
            <div class="flat-card-image" style="background-image: url(<%=flat.picture_url %>)">
            </div>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <h4><%= flat.name%> </h4>
                <p><%= flat.description%></p>
              </div>
              <div class="d-flex">
                <div class="d-flex">
                  <%= flat.number_of_guests %>
                </div>
                <div class="d-flex ml-3">
                  <%= flat.price_per_night %>
                </div>
              </div>
            </div>
            <div class="flat-card-actions">
              <%= link_to "More Info", flat_path(flat) %>
              <%= link_to "Edit Flat", edit_flat_path(flat) %>
              <%= link_to "Remove", flat_path(flat), method: :delete,
            data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

