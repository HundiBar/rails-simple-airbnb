  <div class="container index mt-3">
    <div class="row">
      <div class="col-12">
        <h1>All our flats</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <% if @query %>
          <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
        <% else %>
          <p>All <%= Flat.count %> flats.</p>
        <% end %>
      </div>
    </div>

    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="flat-card">
            <div class="flat-card-image" style="background-image: url(<%=flat.picture_url %>)">
            </div>
            <div class="flat-card-content p-3">
              <div class="flat-card-title">
                <h4><%= flat.name%> </h4>
                <p><%= flat.description%></p>
              </div>
              <div class="flex">
                <div class="flex">
                  <i class="fas fa-users mx-2" style="font-size: 18px "></i>
                  <span><%= flat.number_of_guests %></span>
                </div>
                <div class="flex">
                  <i><i class="fas fa-euro-sign mx-1"></i> </i>
                  <%= flat.price_per_night %>
                </div>
              </div>
            </div>
            <div class="flat-card-actions">
              <%= link_to "More Info", flat_path(flat), class: "m-2 more" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "m-2 edit" %>
              <%= link_to "Remove", flat_path(flat), method: :delete,
            data: { confirm: "Are you sure?" }, class: "m-2 remove" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

